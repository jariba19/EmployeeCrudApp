@page
@using CrudApp.API.Pages
@model LoginModel
@{
    Layout = "_Layout";
}
<form method="post" class="card p-4 shadow-sm mt-5 mx-auto" style="max-width:400px">
    <h4 class="mb-3 text-center">Iniciar Sesión</h4>

    <div class="mb-3">
        <input asp-for="Input.Username" class="form-control" placeholder="Username" />
    </div>

    <div class="mb-3">
        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>

<div class="d-flex justify-content-center">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-2" style="width: 400px;">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>

